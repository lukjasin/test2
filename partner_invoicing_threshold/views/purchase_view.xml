<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="purchase_order_form_inherit_threshold" model="ir.ui.view">
        <field name="name">purchase.order.form.inherit.threshold</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <field name="user_id" position="after">
                <field name="threshold_partner_id" invisible="1"/>
                <field name="threshold_wo_email_partner_id" invisible="1"/>
            </field>
        </field>
    </record>

    <record id="view_purchase_order_filter_inherit_threshold" model="ir.ui.view">
        <field name="name">purchase.order.list.select.inherit.threshold</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.view_purchase_order_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='vendor']" position="after">
                <filter name="threshold_wo_set_email_partner_id" string="Vendor W/O Email &amp; W. Threshold" domain="[]" context="{'group_by': 'threshold_wo_email_partner_id'}"/>
                <filter name="threshold_vendor" string="Vendor W. Threshold" domain="[]" context="{'group_by': 'threshold_partner_id'}"/>
            </xpath>
        </field>
    </record>
</odoo>
