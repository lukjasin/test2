<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="report_invoice_document_inherit" inherit_id="account.report_invoice_document">
      <xpath expr="//div[@class='page']/h2" position="attributes">
             <attribute name="style" separator=" " add="margin-top: 5px; margin-bottom: 5px;"/>
         </xpath>
         <xpath expr="//span[@t-field='line.name']" position="attributes">
             <attribute name="class" separator=" " add="small"/>
         </xpath>
         <xpath expr="//span[@t-field='line.price_unit']" position="attributes">
             <attribute name="class" separator=" " add="small"/>
         </xpath>
         <xpath expr="//span[@t-field='line.quantity']" position="attributes">
             <attribute name="class" separator=" " add="small"/>
         </xpath>
         <xpath expr="//span[@t-field='line.product_uom_id']" position="attributes">
             <attribute name="class" separator=" " add="small"/>
         </xpath>
         <xpath expr="//span[@t-field='line.discount']" position="attributes">
             <attribute name="class" separator=" " add="small"/>
         </xpath>
         <xpath expr="//span[@id='line_tax_ids']" position="attributes">
             <attribute name="class" separator=" " add="small"/>
         </xpath>
         <xpath expr="//span[@t-field='line.price_subtotal']" position="attributes">
             <attribute name="class" separator=" " add="small"/>
         </xpath>
         <xpath expr="//span[@t-field='line.price_total']" position="attributes">
             <attribute name="class" separator=" " add="small"/>
         </xpath>
         <xpath expr="//div[@t-if='o.partner_id.vat']" position="replace">
             <t t-if="o.partner_id.company_type=='person'">KBO</t>
             <t t-if="o.partner_id.company_type=='company'">VAT</t>:
             <span t-field="o.partner_id.vat"/>
         </xpath>
         <xpath expr="//t[@t-foreach='o.amount_by_group']" position="before">
           <t t-set="show_zero_message" t-value="False"/>
         </xpath>
         <xpath expr="//t[@t-foreach='o.amount_by_group']" position="inside">
           <t t-if="amount_by_group[0] == 'TVA 0%' or amount_by_group[0] == 'BTW 0%' "><t t-set="show_zero_message" t-value="True"/></t>
         </xpath>
         <xpath expr="//p[@name='payment_communication']" position="replace">
             <div class="row" style="margin-top:5px">
                 <div class="col small" style="margin-top:5px" t-if="o.partner_id.country_id.code != 'BE'">
                     <span>
                         <span>fnx_BTW_verlegd</span>
                     </span>
                 </div>
             </div>
             <div class="row" style="margin-top:5px">
                 <div class="col small">
                     <span>fnx_De_verantwoordelijke</span>
                 </div>
             </div>
             <div class="row" style="margin-top:5px" t-if="o.partner_id.country_id.code == 'BE' and show_zero_message">
                 <div class="col small" style="margin-top:5px">
                     <span>fnx_Recuperatieproducten</span>
                 </div>
             </div>


             <div class="row" style="margin-top:5px">
                 <div class="col small">
                     <span t-if="o.move_type in ('out_invoice', 'in_refund') and o.payment_reference">fnx_Gebruik</span>
                 </div>
             </div>

             <div class="row">
                 <div class="col" style="margin-top:5px"/>
             </div>

             <div class="row" style="margin-top:5px">
                 <div class="col">
                     <span>
                         <p class="small">
                             <span>fnx_Algemene</span>
                         </p>
                     </span>
                 </div>
             </div>
             <div class="row" style="margin-top:5px" t-if="o.state != 'draft' and o.invoice_payment_term_id.id != 12">
                 <div class="col small">
                     <span>fnx_Payment_ref </span><span t-esc="o.payment_reference"/>
                 </div>
             </div>
             <div t-if="o.invoice_payment_term_id" name="payment_term" class="small">
                 <span t-field="o.invoice_payment_term_id.note"/>
             </div>

             <div t-if="o.fiscal_position_id.note" name="note">
                 <span t-field="o.fiscal_position_id.note"/>
             </div>

             <div t-if="o.invoice_incoterm_id" name="incoterm">
                 <strong>Incoterm: </strong>
                 <span t-field="o.invoice_incoterm_id.code"/> -
                 <span t-field="o.invoice_incoterm_id.name"/>
             </div>
             <div class="row">
                 <div class="col small">
                     <span t-if="o.move_type == 'out_invoice' and o.invoice_payment_term_id.id == 12">
                         fnx_Sales_dd
                     </span>
                 </div>
             </div>
             <div id="qrcode" t-if="o.display_qr_code and o.invoice_payment_term_id.id != 12">
                 <p t-if="qr_code_urls and qr_code_urls.get(o.id)" class="small">
                     <strong class="text-center">Scan me with your banking app.</strong>
                     <br/>
                     <br/>
                     <img class="border border-dark rounded" t-att-src="qr_code_urls[o.id]"/>
                 </p>
             </div>
         </xpath>
         <xpath expr="//p[@t-if='o.invoice_payment_term_id']" position="replace"/>
         <xpath expr="//p[@t-if='o.narration']" position="replace"/>
         <xpath expr="//p[@t-if='o.fiscal_position_id.note']" position="replace"/>
         <xpath expr="//p[@t-if='o.invoice_incoterm_id']" position="replace"/>
         <xpath expr="//div[@t-if='o.display_qr_code']" position="replace"/>
         <xpath expr="//div[@t-if='o.invoice_origin']" position="replace">
             <div class="col-auto col-3 mw-100 mb-2" t-if="o.invoice_origin" name="origin">
                 <strong t-if="lang == 'nl_BE'">Klant ID:</strong>
                 <strong t-else="">fnxCustomerID</strong>
                 <p class="m-0" t-field="o.partner_id.id"/>
             </div>
         </xpath>
         <xpath expr="//th[@name='th_description']" position="replace">
            <th name="th_description" class="text-left"><span>fnx_Product</span></th>
         </xpath>
         <xpath expr="//th[@name='th_taxes']" position="replace">
            <th name="th_taxes" t-attf-class="text-left {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}"><span>fnx_Tax</span></th>
         </xpath>
          <xpath expr="//tr[@class='border-black o_subtotal']" position="replace">
             <tr class="border-black o_subtotal" style="">
             <td><strong>fnx_Subtotal</strong></td>
             <td class="text-right">
            <span t-field="o.amount_untaxed"/>
            </td>
           </tr>
          </xpath>
          <xpath expr="//span[@t-field='line.name']" position="replace">
            <span t-field="line.product_id.name" t-options="{'widget': 'text'}" class="small"/>
          </xpath>
    </template>

    <template id="report_invoice_vendor_bills">
      <t t-call="web.external_layout">
          <t t-set="o" t-value="o.with_context(lang=lang)"/>
          <t t-set="address">
              <!--JAREK widok vendor BILLS-->
              <t t-if="o.partner_shipping_id and (o.partner_shipping_id != o.partner_id)">
                  <t t-set="information_block">
                      <div groups="sale.group_delivery_invoice_address">
                          <strong>Shipping Address:</strong>
                          <div t-field="o.partner_shipping_id" t-options="{'widget': 'contact', 'fields': ['address', 'name'], 'no_marker': True}"/></div>
                  </t>
              </t>
              <div t-field="o.partner_id" t-options="{'widget': 'contact', 'fields': ['address', 'name'], 'no_marker': True}" groups="sale.group_delivery_invoice_address"/>
              <address t-field="o.partner_id" t-options="{'widget': 'contact', 'fields': ['address', 'name'], 'no_marker': True}" groups="!sale.group_delivery_invoice_address"/>
              <div t-if="o.partner_id.vat" class="mt16">
                  <!-- <t t-if="o.company_id.country_id.vat_label" t-esc="o.company_id.country_id.vat_label" id="inv_tax_id_label"/><t t-else="">Tax ID</t>: <span t-field="o.partner_id.vat"/></div>-->
                  <t t-if="o.partner_id.company_type=='person'">KBO</t>
                  <t t-if="o.partner_id.company_type=='company'">VAT</t>:
                  <span t-field="o.partner_id.vat"/>
              </div>
          </t>
          <div class="page">
              <div class="row"/>
              <h2>
                  <span t-if="o.move_type == 'out_invoice' and o.state == 'posted'" class="small">Invoice</span>
                  <span t-if="o.move_type == 'out_invoice' and o.state == 'draft'">Draft Invoice</span>
                  <span t-if="o.move_type == 'out_invoice' and o.state == 'cancel'">Cancelled Invoice</span>
                  <span t-if="o.move_type == 'out_refund'">Credit Note</span>
                  <span t-if="o.move_type == 'in_refund'">Vendor Credit Note</span>
                  <span t-if="o.move_type == 'in_invoice'">Borderel</span>
                  <span t-if="o.name != '/'" t-field="o.name" class="small"/>
              </h2>
              <div id="informations" class="row mt32 mb32">
                  <div class="col-auto col-3 mw-100 mb-2" t-if="o.invoice_date" name="invoice_date">
                      <strong>fnx_BorderelDate:</strong>
                      <p class="m-0" t-field="o.invoice_date"/>
                  </div>
                  <div class="col-auto col-3 mw-100 mb-2" t-if="o.invoice_date_due and o.move_type == 'out_invoice' and o.state == 'posted'" name="due_date">
                      <strong>Due Date:</strong>
                      <p class="m-0" t-field="o.invoice_date_due"/>
                  </div>
                  <div class="col-auto col-3 mw-100 mb-2" t-if="o.invoice_origin" name="origin">
                      <strong>Customer ID:</strong>
                      <p class="m-0" t-field="o.partner_id.id"/>
                  </div>
                  <div class="col-auto col-3 mw-100 mb-2" t-if="o.partner_id.ref" name="customer_code">
                      <strong>Customer Code:</strong>
                      <p class="m-0" t-field="o.partner_id.ref"/>
                  </div>
                  <div class="col-auto col-3 mw-100 mb-2" t-if="o.ref" name="reference">
                      <strong>Reference:</strong>
                      <p class="m-0" t-field="o.ref"/>
                  </div>
              </div>
              <t t-set="display_discount" t-value="any(l.discount for l in o.invoice_line_ids)"/>
              <table class="table table-sm o_main_table" name="invoice_line_table">
                  <thead>
                      <tr>
                          <th name="th_description" class="text-left">
                              <span>Description</span>
                          </th>
                          <th>
                              <span>Date</span>
                          </th>
                          <th>
                              <span>Details</span>
                          </th>
                          <th name="th_quantity" class="text-right">
                              <span>Quantity</span>
                          </th>
                          <th name="th_priceunit" t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                              <span>Unit Price</span>
                          </th>
                          <th name="th_price_unit" t-if="display_discount" t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                              <span>Disc.%</span>
                          </th>
                          <th name="th_taxes" t-attf-class="text-left {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                              <span>Taxes</span>
                          </th>
                          <th name="th_subtotal" class="text-right">
                              <span groups="account.group_show_line_subtotals_tax_excluded">fnx_Amount</span>
                              <span groups="account.group_show_line_subtotals_tax_included">Total Price</span>
                          </th>
                      </tr>
                  </thead>
                  <tbody class="invoice_tbody">
                      <t t-set="current_subtotal" t-value="0"/>
                      <t t-set="lines" t-value="o.invoice_line_ids.sorted(key=lambda l: (-l.sequence, l.date, l.move_name, -l.id), reverse=True)"/>
                      <t t-foreach="lines" t-as="line">
                          <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                          <t t-set="current_subtotal" t-value="current_subtotal + line.price_total" groups="account.group_show_line_subtotals_tax_included"/>
                          <tr t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">
                              <t t-if="not line.display_type" name="account_invoice_line_accountable">
                                  <td name="account_invoice_line_name">
                                      <span t-field="line.product_id.name" t-options="{'widget': 'text'}" class="small"/>
                                  </td>
                                  <td>
                                      <span t-field="line.x_studio_date_of_pickup" class="text-nowrap small"/>
                                  </td>
                                  <td>
                                      <span t-field="line.x_studio_collection" class="small"/>
                                  </td>
                                  <td class="text-right">
                                      <span t-field="line.quantity" class="small"/>
                                      <span t-field="line.product_uom_id" groups="uom.group_uom"/>
                                  </td>
                                  <td t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                      <span class="text-nowrap small" t-field="line.price_unit"/>
                                  </td>
                                  <td t-if="display_discount" t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                      <span class="text-nowrap" t-field="line.discount"/>
                                  </td>
                                  <td t-attf-class="text-left {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                      <span t-esc="', '.join(map(lambda x: (x.description or x.name), line.tax_ids))" id="line_tax_ids" class="small"/>
                                  </td>
                                  <td class="text-right o_price_total">
                                      <span class="text-nowrap small" t-field="line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                                      <span class="text-nowrap" t-field="line.price_total" groups="account.group_show_line_subtotals_tax_included"/>
                                  </td>
                              </t>
                              <t t-if="line.display_type == 'line_section'">
                                  <td colspan="99">
                                      <span t-field="line.name" t-options="{'widget': 'text'}"/>
                                  </td>
                                  <t t-set="current_section" t-value="line"/>
                                  <t t-set="current_subtotal" t-value="0"/></t>
                              <t t-if="line.display_type == 'line_note'">
                                  <td colspan="99">
                                      <span t-field="line.name" t-options="{'widget': 'text'}"/>
                                  </td>
                              </t>
                          </tr>
                          <t t-if="current_section and (line_last or lines[line_index+1].display_type == 'line_section')">
                              <tr class="is-subtotal text-right">
                                  <td colspan="101">
                                      <strong class="mr16">Subtotal</strong>
                                      <span t-esc="current_subtotal" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/>
                                  </td>
                              </tr>
                          </t>
                      </t>
                  </tbody>
              </table>
              <div class="clearfix">
                  <div id="total" class="row">
                      <div t-attf-class="#{'col-6' if report_type != 'html' else 'col-sm-7 col-md-6'} ml-auto">
                          <table class="table table-sm" style="page-break-inside: avoid;">
                              <tr class="border-black o_subtotal" style="">
                                  <td>
                                      <strong>Subtotal</strong>
                                  </td>
                                  <td class="text-right">
                                      <span t-field="o.amount_untaxed"/>
                                  </td>
                              </tr>
                              <t t-foreach="o.amount_by_group" t-as="amount_by_group">
                                  <tr style="">
                                      <t t-if="len(o.line_ids.filtered(lambda line: line.tax_line_id)) in [0, 1] and o.amount_untaxed == amount_by_group[2]">
                                          <td>
                                              <span class="text-nowrap" t-esc="amount_by_group[0]"/>
                                          </td>
                                          <td class="text-right o_price_total">
                                              <span class="text-nowrap" t-esc="amount_by_group[3]"/>
                                          </td>
                                      </t>
                                      <t t-else="">
                                          <td>
                                              <span t-esc="amount_by_group[0]"/>
                                              <span class="text-nowrap"> on

                                                  <t t-esc="amount_by_group[4]"/>
                                              </span>
                                          </td>
                                          <td class="text-right o_price_total">
                                              <span class="text-nowrap" t-esc="amount_by_group[3]"/>
                                          </td>
                                      </t>
                                  </tr>
                              </t>
                              <tr class="border-black o_total">
                                  <td>
                                      <strong>Total</strong>
                                  </td>
                                  <td class="text-right">
                                      <span class="text-nowrap" t-field="o.amount_total"/>
                                  </td>
                              </tr>
                              <t t-if="print_with_payments">
                                  <t t-if="o.payment_state != 'invoicing_legacy'">
                                      <t t-set="payments_vals" t-value="o.sudo()._get_reconciled_info_JSON_values()"/>
                                      <t t-foreach="payments_vals" t-as="payment_vals">
                                          <tr>
                                              <td>
                                                  <i class="oe_form_field text-right oe_payment_label">Paid on
                                                      <t t-esc="payment_vals['date']" t-options="{'widget': 'date'}"/>
                                                  </i>
                                              </td>
                                              <td class="text-right">
                                                  <span t-esc="payment_vals['amount']" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/>
                                              </td>
                                          </tr>
                                      </t>
                                      <t t-if="len(payments_vals) &gt; 0">
                                          <tr class="border-black">
                                              <td>
                                                  <strong>Amount Due</strong>
                                              </td>
                                              <td class="text-right">
                                                  <span t-field="o.amount_residual"/>
                                              </td>
                                          </tr>
                                      </t>
                                  </t>
                              </t>
                          </table>
                      </div>
                  </div>
              </div>
              <div class="row">
                  <div class="col small" style="margin-top:5px" t-if="o.partner_id.country_id.code != 'BE'">
                      <span>fnx_BTW_verlegd</span>
                  </div>
              </div>

              <div class="row">
                  <div class="col small" style="margin-top:5px" t-if="o.partner_id.country_id.code != 'BE'">
                      <span>fnx_PaidByCompany1 </span><span t-field="o.invoice_date_due"/><span> fnx_PaidByCompany2 </span> <span t-field="o.partner_bank_id"/>
                  </div>
              </div>

              <div class="row">
                  <div class="col small">
                      <span>fnx_De_verantwoordelijke</span>
                  </div>
              </div>

              <div class="row">
                  <div class="col small" style="margin-top:5px">
                      <span>fnx_VAT_paid</span>
                  </div>
              </div>

              <div class="row">
                  <div class="col">
                      <span>
                          <p class="small">
                              <span>fnx_Algemene</span>
                          </p>
                      </span>
                  </div>
              </div>

          </div>
      </t>
    </template>

    <template id="report_invoice_custom_with_payment_inherit" inherit_id="account.report_invoice_with_payments">
        <xpath expr="//t[@t-foreach='docs']" position="replace">
            <t t-foreach="docs" t-as="o">
                <t t-set="lang" t-value="o.partner_id.lang"/>
                <t t-set="print_with_payments" t-value="True"/>
                <t t-if="o.move_type == 'out_invoice'" t-call="account.report_invoice_document" t-lang="lang"/>
                <t t-else="" t-call="fenix_custom_reports.report_invoice_vendor_bills" t-lang="lang"/>
            </t>
        </xpath>
    </template>
