<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Inherit Form view for mass invoicing & billing for add custom fields-->
    <record id="view_mass_account_move_form_inherit" model="ir.ui.view">
        <field name="name">mass.account.move.form.inherit</field>
        <field name="model">mass.account.move</field>
        <field name="inherit_id" ref="mass_invoicing_billing.view_mass_account_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='conditions']/div/div[last()]" position="after">
                <div class="col-6" attrs="{'invisible': ['|', ('model_name', '=', 'sale.order'), ('confirm_by', '=', 'force')]}">
                    <field name="is_generate_proforma" class="oe_inline"/> Generate proforma by <field name="po_merge_type" class="oe_inline" attrs="{'required': [('is_generate_proforma', '=', True)]}"/>.
                </div>
            </xpath>
            <xpath expr="//group[@name='confirm_sent_options']" position="before">
                <group>
                    <group name="vendor_po" string="Vendor's Purchase Order" attrs="{'invisible': ['|', '|', '|', ('is_generate_proforma', '=', False), ('model_name', '=', 'sale.order'), ('po_merge_type', 'in', ('cancel_new_po', 'delete_new_po')), ('confirm_by', '=', 'force')]}">
                        <field name="partner_purchase_order_ids" nolabel="1">
                            <tree string="Vendor's Purchase Order" editable="bottom" create="0" delete="0">
                                <field name="partner_id" required="1" readonly="1" force_save="1"/>
                                <field name="purchase_order_id" required="1" context="{'group_partner_id': partner_id, 'po_domain': parent.domain}" options="{'no_create': True}"/>
                                <field name="mass_account_move_id" invisible="1"/>
                            </tree>
                            <form string="Vendor's Purchase Order">
                                <group>
                                    <group>
                                        <field name="partner_id" required="1"/>
                                    </group>
                                    <group>
                                        <field name="purchase_order_id" required="1"/>
                                        <field name="mass_account_move_id" invisible="1"/>
                                    </group>
                                </group>
                            </form>
                        </field>
                    </group>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
