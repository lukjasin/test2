<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Inherit Form view for invoice order for add custom fields-->

    <record id="view_pickup_details_invoice_form" model="ir.ui.view">
        <field name="name">fenix.invoice.move.line.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='name']" position="after">
                <field name="x_studio_date_of_pickup"/>
                <field name="x_studio_collection"/>
            </xpath>
        </field>
    </record>

</odoo>
