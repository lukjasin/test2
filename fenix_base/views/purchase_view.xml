<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Inherit Form view for purchase order for add custom fields-->

    <record id="view_pickup_details_purchase_form" model="ir.ui.view">
        <field name="name">fenix.purchase.order.form</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <field name="partner_id" position="after">
                <field name="x_studio_pickup_address"/>
                <field name="x_studio_pickup_date"/>
            </field>
            <xpath expr="//field[@name='order_line']/tree/field[@name='name']" position="after">
                <field name="x_studio_date_of_pickup"/>
                <field name="x_studio_collection"/>
            </xpath>
        </field>
    </record>

</odoo>
