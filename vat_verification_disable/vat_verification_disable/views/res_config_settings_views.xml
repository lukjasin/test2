<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_view_form_inherit_vat" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.vat</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <div id="vies_service_setting" position="after">
                <div class="col-12 col-lg-6 o_setting_box"
                    id="disable_vat_verification_setting"
                    title="If this checkbox is ticked, you will not be able to verify VAT number of contact.">
                    <div class="o_setting_left_pane">
                        <field name="disable_vat_verification"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="disable_vat_verification"/>
                        <div class="text-muted">
                           Disable Contact VAT Verification
                        </div>
                    </div>
                </div>
            </div>
        </field>
    </record>
</odoo>
