<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form view for Merge purchase order -->
    <record id="view_purchase_order_merge" model="ir.ui.view">
        <field name="name">Merge Purchase Orders</field>
        <field name="model">purchase.order.merge</field>
        <field name="arch" type="xml">
             <form string="Purchase Order Merge">
                <group>
                    <field name="po_merge_type" widget="radio"/>
                </group>
                <group>
                    <group>
                        <field name="purchase_order_id" attrs="{'invisible': [('po_merge_type', 'not in', ('cancel_add_po', 'delete_add_po'))], 'required': [('po_merge_type', 'in', ('cancel_add_po', 'delete_add_po'))]}" options="{'no_create': True}" context="{'merge_po': True, 'order_ids': active_ids}"/>
                    </group>
                </group>
                <footer>
                    <button name="merge_purchase_orders" string="Merge Orders" type="object"
                        class="btn-primary"/>
                    <button string="Cancel" class="btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_purchase_order_merge" model="ir.actions.act_window">
        <field name="name">Merge Purchase Orders</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">purchase.order.merge</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="view_id" ref="view_purchase_order_merge"/>
        <field name="binding_model_id" ref="purchase.model_purchase_order"/>
    </record>
</odoo>
