<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Inherit Form view for purchase order for add custom fields-->

    <record id="mass_purchase_details_purchase_form" model="ir.ui.view">
        <field name="name">mass.proforoma.purchase.order.form</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <field name="payment_term_id" position="after">
                <field name="proforma_status"/>
                <field name="proforma_date"/>
            </field>
        </field>
    </record>

    <record id="mass_purchase_details_purchase_tree" model="ir.ui.view">
        <field name="name">mass.proforoma.purchase.order.tree</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_kpis_tree"/>
        <field name="arch" type="xml">
            <field name="state" position="after">
                <field name="proforma_status" optional="show" widget="badge" decoration-success="proforma_status == 'create' or proforma_status == 'create_send'"/>
            </field>
        </field>
    </record>

</odoo>
