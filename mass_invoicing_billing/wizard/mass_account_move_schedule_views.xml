<?xml version="1.0"?>
<odoo>
    <record id="mass_account_move_schedule_view_form"  model="ir.ui.view">
        <field name="name">mass.account.move.schedule.view.form</field>
        <field name="model">mass.account.move.schedule</field>
        <field name="arch" type="xml">
            <form string="Future Schedule Date">
                <group>
                    <group>
                        <field name="schedule_date" string="Expected schedule on" required="1"/>
                    </group>
                </group>
                <footer>
                    <button string="Schedule" name="action_schedule" type="object" class="btn-primary"/>
                    <button string="Discard " class="btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="mass_account_move_schedule_action" model="ir.actions.act_window">
        <field name="name">When do you want to automate process?</field>
        <field name="res_model">mass.account.move.schedule</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
